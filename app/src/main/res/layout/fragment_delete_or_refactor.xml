<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/графитно_черный"
    tools:context=".DeleteOrRefactorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNameTrimester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="Первый триместр"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMarkAndTimes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="@+id/tvNameTrimester"
            app:layout_constraintStart_toStartOf="@+id/tvNameTrimester"
            app:layout_constraintTop_toBottomOf="@+id/tvNameTrimester" />


        <TextView
            android:id="@+id/tvInformationDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Введите время оценки, которую хотите удалить:"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvMarkAndTimes"
            app:layout_constraintStart_toStartOf="@+id/tvMarkAndTimes"
            app:layout_constraintTop_toBottomOf="@+id/tvMarkAndTimes" />

        <EditText
            android:id="@+id/edMarkTimeDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/tvInformationDelete"
            app:layout_constraintStart_toStartOf="@+id/tvInformationDelete"
            app:layout_constraintTop_toBottomOf="@+id/tvInformationDelete" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Удалить"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/edMarkTimeDelete"
            app:layout_constraintStart_toStartOf="@+id/edMarkTimeDelete"
            app:layout_constraintTop_toBottomOf="@+id/edMarkTimeDelete" />

        <TextView
            android:id="@+id/tvInformationRefactor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Введите время оценки, чтобы заменить существующую на новую:"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:hint="Введите время"
            app:layout_constraintEnd_toEndOf="@+id/bDelete"
            app:layout_constraintStart_toStartOf="@+id/bDelete"
            app:layout_constraintTop_toBottomOf="@+id/bDelete" />

        <EditText
            android:id="@+id/edMarkTimeRefactor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:hint="Введите время"
            app:layout_constraintEnd_toEndOf="@+id/tvInformationRefactor"
            app:layout_constraintStart_toStartOf="@+id/tvInformationRefactor"
            app:layout_constraintTop_toBottomOf="@+id/tvInformationRefactor" />

        <Spinner
            android:id="@+id/spMark1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/edMarkTimeRefactor"
            app:layout_constraintStart_toStartOf="@+id/edMarkTimeRefactor"
            app:layout_constraintTop_toBottomOf="@+id/edMarkTimeRefactor" />

        <Button
            android:id="@+id/bRefactor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp"
            android:text="Изменить"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/edMarkTimeRefactor"
            app:layout_constraintStart_toStartOf="@+id/edMarkTimeRefactor"
            app:layout_constraintTop_toBottomOf="@+id/spMark1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
